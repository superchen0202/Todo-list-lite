<section class="px-4 py-3">
  
  <h2 class="font-thin text-4xl">註冊</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field py-3">
      <%= f.label :email, "信箱", class:"label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
    </div>

    <div class="field py-3">
      <%= f.label :password, "密碼", class:"label" %>
      <%= f.password_field :password, autocomplete: "new-password", class:"input" %><br />
  
      <% if @minimum_password_length %>
      <em>(密碼最少要<%= @minimum_password_length %>個字元)</em>
      <% end %>

    </div>

    <div class="field py-3">
      <%= f.label :password_confirmation,"確認密碼", class:"label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
    </div>

    <div class="actions mt-2">
      <%= f.submit "註冊",  class:"button" %>
    </div>
  <% end %>

  <!-- <%= render "devise/shared/links" %> -->
</section>